<tomee>
  <!-- see https://tomee.apache.org/latest/docs/admin/configuration/containers.html -->

  <SecurityService id="mySecurityService" type="SecurityService">
    defaultUser = guest
  </SecurityService>

  <!-- When we deploy a web app we need to deploy to webapps -->
  <!-- <Deployments dir="webapps" /> -->

  <!-- When we deploy an EAR we need to deploy to apps -->
   <Deployments dir="apps" />

  <Resource id="jdbc/test_rctc_db" type="DataSource">
    JdbcDriver com.ibm.db2.jcc.DB2Driver
    JdbcUrl jdbc:db2://10.0.50.43:50001/rctc_db:currentSchema=RCTCINST;
    UserName rctcinst
    Password RCTCbric2020
    JtaManaged true
    InitialSize 5
    MaxActive 20
    MaxIdle 10
    MinIdle 5
    MaxWait 10000
    TestOnBorrow true
    ValidationQuery SELECT 1 FROM SYSIBM.SYSDUMMY1
  </Resource>

  <Resource id="jdbc/pg_rctc_db" type="DataSource">
    JdbcDriver org.postgresql.Driver
    JdbcUrl jdbc:postgresql://rctc-db:5432/RCTC_DB
    UserName rctc_user
    Password rctc_user
    JtaManaged true
    InitialSize 5
    MaxActive 20
    MaxIdle 10
    MinIdle 5
    MaxWait 10000
    TestOnBorrow true
    ValidationQuery SELECT 1
  </Resource>
</tomee>
